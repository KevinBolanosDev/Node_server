<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body" style="background-color: #232D3F">
                    <h4 class="card-tittle d-flex justify-content-between align-items-center">{{title}} <a href="/notes/edit/{{_id}}"><i class="fa-solid fa-pen-to-square"></i></a></h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-block btn-sm" style="background-color: #005B41;">
                        Delete
                    </button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>